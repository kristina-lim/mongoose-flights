<%- include('../partials/header') %>

<section id="show-page">
  <div>Airline: </div>
  <div><%= flight.airline %></div>
  <div>Airport: </div>
  <div><%= flight.airport %></div>
  <div>Flight No: </div>
  <div><%= flight.flightNo %></div>
  <div>Departure: </div>
  <div><%= flight.departs %></div>
  
<button><a href="/flights/<%= flight._id %>/tickets/new">New Ticket</a></button>

<br><br><h2>Destinations</h2>
<form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">
    <label>Arrival:
        <input type="datetime-local" name="arrival%>">
    </label>
    <label>Airport:
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SFO" selected>SFO</option>
    </select>
    <input type="submit" value="Add Destination">
</form>

<% if (flight.destinations.length) { %>
    <% flight.destinations.forEach(function(d) { %>
        <br><tr>
            <td><%= d.airport %></td>
            <td><%= d.arrival %></td>
        </tr>
        <% }); %>
    <tbody>
    </tbody>
  </table>
<% } else { %>
  <br><h5>No Current Destination</h5>
<% } %>

<% if (tickets.length) { %>
    <% tickets.forEach(function(t) { %>
        <br><tr>
            <td><%= t.seat %></td>
            <td><%= t.price %></td>
        </tr>
        <% }); %>
    <tbody>
    </tbody>
  </table>
<% } else { %>
  <br><h5>No Current Ticket</h5>
<% } %>

<%- include('../partials/footer') %>