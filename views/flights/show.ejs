<%- include('../partials/header') %>

<section id="show-page">
  <div>Airline: </div>
  <div><%= flight.airline %></div>
  <div>Airport: </div>
  <div><%= flight.airport %></div>
  <div>Flight No: </div>
  <div><%= flight.flightNo %></div>
  <div>Departure: </div>
  <div><%= flight.departs %></div>
  <div>Ticket:</div>
  <ul>
      <%- flight.ticket.map (t =>
          `<li>${t.seat} <small>${t.price}</small> <small>${t.flight}</small></li>`
      ).join('') %>
  </ul>
</section>

<form id="add-ticket" action="/flights/<%= flight._id %>/tickets" method="POST">
    <select name="ticketId">
        <%- tickets.map (p =>
            `<option value="${t._id}">${t.seat} <small>${t.price}</small> <small>${t.flight}</small></option>
        ).join('') %>
    </select>
    <button><a href="/tickets<%= t._id %>">New Ticket</a></button>
</form>

<br><br><h2>Destinations</h2>
<form id="add-destination-form" method="POST" action="/flights/<%= flight._id %>/destinations">
    <label>Arrival:
        <input type="datetime-local" name="arrival%>">
    </label>
    <label>Airport:
    <select name="airport">
        <option value="AUS">AUS</option>
        <option value="DFW">DFW</option>
        <option value="DEN">DEN</option>
        <option value="LAX">LAX</option>
        <option value="SFO" selected>SFO</option>
    </select>
    <input type="submit" value="Add Destination">
</form>
  
<% if (flight.destinations.length) { %>
    <% flight.destinations.forEach(function(d) { %>
        <tr>
            <td><%= d.airport %></td>
            <td><%= d.arrival %></td>
        </tr>
        <% }); %>
    <tbody>
    </tbody>
  </table>
<% } else { %>
  <h5>No Current Destination</h5>
<% } %>

<%- include('../partials/footer') %>