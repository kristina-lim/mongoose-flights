<%- include('../partials/header') %>

<h2>Flight List</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight No</th>
      <th>Departs</th>
      <!-- <th>Flights Now</th> -->
    </tr>
  </thead>
  <tbody>
    <!-- Write the line of EJS to iterate over movies using forEach -->
    <% flights.forEach(function(f) { %>
      <tr>
        <td><%= f.airline %></td>
        <td><%= f.airport %></td>
        <td><%= f.flightNo %></td>
        <td><%= f.departs %></td>
        <td><button><a href="/flights/<%= f._id %>">Detail</a></button></td>
      </tr>
    <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>